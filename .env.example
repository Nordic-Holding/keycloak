# PostgreSQL Database Configuration
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=changeme_strong_password

# Keycloak Admin Configuration
# IMPORTANT: Change these credentials before deploying to production!
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme_admin_password

# Keycloak Hostname Configuration
# For production, set this to your actual domain name
# For Coolify: Set to your app's domain (e.g., keycloak.yourdomain.com)
KC_HOSTNAME=localhost
KC_HOSTNAME_STRICT=false

# HTTP/HTTPS Configuration
# HTTP is enabled by default for deployment behind reverse proxies (Traefik, Nginx, etc.)
# The reverse proxy handles HTTPS/SSL termination
# For Coolify: Leave KC_HTTP_ENABLED=true (Traefik handles HTTPS)
# For local dev with HTTPS: Set KC_HTTP_ENABLED=false
KC_HTTP_ENABLED=true

# HTTPS Keystore Password (only used if KC_HTTP_ENABLED=false)
# This matches the self-signed certificate generated in Dockerfile
# For production with direct HTTPS, replace with your actual keystore password
KC_HTTPS_KEY_STORE_PASSWORD=password

# Proxy Configuration
# Options: xforwarded, forwarded
# Use 'xforwarded' if your reverse proxy sets X-Forwarded-* headers
KC_PROXY_HEADERS=xforwarded

# JVM Heap Settings (optional, defaults are usually fine)
# JAVA_OPTS_KC_HEAP=-XX:MaxRAMPercentage=70 -XX:InitialRAMPercentage=50
